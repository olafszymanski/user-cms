type User {
  id: ID
  username: String
  email: String
  password: String
  admin: Boolean
}

type Query {
  user(id: ID!): User!
  users: [User!]!
}

input NewUser {
  username: String!
  email: String!
  password: String!
  admin: Boolean!
}

input UpdateUser {
  id: ID!
  username: String
  email: String
  password: String
  admin: Boolean
}

type Mutation {
  createUser(user: NewUser!): User!
  updateUser(user: UpdateUser!): User!
  deleteUser(id: ID!): Boolean!
}
